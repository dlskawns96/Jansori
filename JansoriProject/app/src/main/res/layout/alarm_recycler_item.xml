<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/list_padding_vertical_medium">
    <TextView
        android:id="@+id/alarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timeTextSize"
        android:text="@string/AlarmTime"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/textMarginSmall"/>

    <TextView
        android:id="@+id/activeDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mon"
        android:layout_marginEnd="@dimen/textMarginSmall"
        android:layout_toEndOf="@+id/alarmTime"
        android:layout_alignBottom="@+id/alarmTime"/>

    <Switch
        android:id="@+id/alarmActiveSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>